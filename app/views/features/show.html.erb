<h1>Feature Details</h1>

<br>

<div>
  <p><strong>Name</strong><br> <%= @feature.name %></p>

  <p><strong>Puppet Include</strong><br>
    <%= @feature.puppet_include || "none".html_safe  %>
  </p>

  <%= link_to "Edit", edit_feature_path(@feature), class: 'btn btn-default', role: 'btn' %>

  <%= link_to "Destroy", feature_path(@feature), method: 'delete', class: 'btn btn-danger', role: 'btn' %>
</div>
