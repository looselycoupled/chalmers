<h1>Projects</h1>

<br>

<table class="table table-hover projects">
  <thead>
    <tr>
      <th>Name</th>
      <th>Assets</th>
      <th>Servers</th>
      <th>Queue Length</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
    <tr>
      <td><%= link_to p.name, p %></td>
      <td><%= p.assets.length %></td>
      <td><%= p.servers.length %></td>
      <td>Not Implemented</td>
      <td><%= p.state %></td>
      <td><%= display_action(p) %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New Project", new_project_path, class: 'btn btn-primary', role: 'btn' %>
